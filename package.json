{
  "name": "aiverse",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:telegram\" \"npm run dev:api\"",
    "dev:telegram": "npm run dev --workspace=@aiverse/telegram",
    "dev:mobile": "npm run start --workspace=@aiverse/mobile",
    "dev:api": "npm run dev --workspace=api",
    "build": "npm run build --workspace=@aiverse/telegram",
    "build:api": "npm run build --workspace=api",
    "start": "npm run start --workspace=api",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}